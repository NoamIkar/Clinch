<?xml version='1.0' encoding='utf-8'?>
<widget id="com.clinch" 
        versionCode="1"
        version="0.0.1" 
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Clinch</name>
    <description>
        Clinch to collaborate with others to improve your business
    </description>
    <author email="noam.ikar@gmail.com" href="http://clinch.com/">
        Clinch Team
    </author>

    <platform name="ios" />
    <platform name="android" />

    <content src="index.html" />
    

    <preference name="fullscreen" value="true" />

    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <plugin name="org.apache.cordova.console" spec="0.2.13" source="pgb"/>
    <plugin name="org.apache.cordova.device" spec="0.3.0" source="pgb" />
    <plugin name="org.apache.cordova.file" spec="~1.3" source="pgb" />
    <plugin name="org.apache.cordova.geolocation" spec="~0.3" source="pgb" />
    <plugin name="org.apache.cordova.globalization" spec="~0.3" source="pgb" />
    <plugin name="com.ionic.keyboard" spec="~1" source="pgb" />
    <plugin name="com.dawsonloudon.videoplayer" spec="~1" source="pgb" />
    
    <plugin name="cordova-plugin-whitelist" spec="~1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>